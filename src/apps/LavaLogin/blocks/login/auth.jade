form.ng-cloak(name="__form", ng-class="{'errors': currentErrorMessage}", ng-submit="__form.$valid && logIn()", novalidate, ng-autodisable, form-auto-fill-fix)
	img.login-logo(src="#{resolveAsset('/img/Lavaboom-logo-no-shadow.svg')}")
	p.lead {{'LAVALOGIN.SIGNUP.LOGIN' | translate}}

	div.alert.alert-danger(ng-show="currentErrorMessage", ng-bind="currentErrorMessage")

	div.form-group
		input.form-control.input-lg(type='text', auto-focus="true", name="username", ng-model='form.username', placeholder="{{'GLOBAL.PLC_USERNAME_OR_EMAIL' | translate}}", required)
		span.alert.alert-danger(ng-show="__form.$submitted", ng-messages="__form.username.$error", ng-messages-include="LavaLogin/misc/validationMessages")

	div.form-group
		input.form-control.input-lg(type='password', name="password", ng-model='form.password', placeholder="{{'GLOBAL.PLC_PASSWORD' | translate}}", required)
		span.alert.alert-danger(ng-show="__form.$submitted", ng-messages="__form.password.$error", ng-messages-include="LavaLogin/misc/validationMessages")

	.checkbox
		input#check2(type='checkbox', name="check2", ng-model="form.isPrivateComputer")
		label(for='check2') {{'LAVALOGIN.AUTH.LB_PRIVATE_PC' | translate}}

	footer
		button.btn.btn-block.btn-lg.btn-primary(type="submit") {{'LAVALOGIN.AUTH.BTN_GO_TO_MY_INBOX' | translate}}
	p.text-center
		a(ui-sref="invite") {{'LAVALOGIN.AUTH.BTN_NO_ACCOUNT_YET' | translate}}