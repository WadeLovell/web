.cfp-hotkeys(ng-class="{ mac : (navigator.userAgent.indexOf('Mac OS X') != -1)}")
	h4.cfp-hotkeys-title {{ 'LAVAMAIL.HOTKEY.TITLE_GLOBAL' | translate }}
	.key-row(ng-repeat='hotkey in globalHotkeys')
		.cfp-hotkeys-keys
			span.cfp-hotkeys-key.label.label-default(ng-repeat='key in hotkey.combo track by $index') {{ hotkey.require }} {{ key }}
		.cfp-hotkeys-text {{ hotkey.description }}
	h4.cfp-hotkeys-title {{ 'LAVAMAIL.HOTKEY.TITLE_LOCAL' | translate }}
	.key-row(ng-repeat='hotkey in localHotkeys')
		.cfp-hotkeys-keys
			span.cfp-hotkeys-key.label.label-default(ng-repeat='key in hotkey.combo track by $index') {{ hotkey.require }} {{ key }}
		.cfp-hotkeys-text {{ hotkey.description }}
	.cfp-hotkeys-close(ng-click='hidePopup()')
		span.icon-close