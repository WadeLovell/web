div
	form.lava-modal-header
		.filters.row.no-gutter.lava-icon-row.z1
			span.pull-left.modal-heading {{'LAVAMAIL.INBOX.DOWNLOAD.TITLE' | translate}}
			nav.navbar.navbar-inverse(role="navigation")
				div
					ul.nav.navbar-nav.navbar-right
						li
							button.btn.btn-default(ng-click="hidePopup()")
								span.icon-close
		.row.lava-modal-content
			div.col-xs-12.col-xs-offset-6
				hr.spacer
				.progress
					.progress-bar(role='progressbar', aria-valuenow='{{progress}}', aria-valuemin='0', aria-valuemax='100', style='width: {{progress}}%;')
				p.text-center(ng-bind="label")
				hr.spacer